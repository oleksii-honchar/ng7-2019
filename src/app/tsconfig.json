{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "package.json": ["../package.json"],
      "@src/*": ["src/*"]
    },
    "outDir": "./dist/out-tsc",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "pretty": true,
    "newLine": "lf",
    "allowJs": false,
    "sourceMap": true,
    "diagnostics": true,
    "declaration": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noStrictGenericChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
